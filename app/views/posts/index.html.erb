<a href="/posts/new" class="waves-effect waves-light btn" style="margin-top: 2em; margin-left: 1.5em;">New post</a>
<% @posts.reverse.each do |post| %>
  <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <!-- <span class="card-title">Card Title</span> -->
            <div class="chip">
              <%= post.user.username %>
              <%= post.created_at %>
            </div>
            <p><%= p simple_format(linebreak(post.message))%></p>
            <!-- <p style='font-size: 0.75em;'><%= post.created_at %></p> -->
            <!-- <h5></h5> -->
          </div>
          <div class="card-action" style: >
            <% if current_user.id == post.user_id %>
              <%= link_to "Delete", post_path(post), method: :delete %>
              <% if post.created_at + 10.minutes > Time.now %> 
                <%= link_to "Update", edit_post_path(post) %>
              <%end%>
            <%end%>
          </div>
        </div>
      </div>
    </div>
<% end %>
